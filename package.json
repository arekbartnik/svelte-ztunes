{
	"name": "svelte-betterauth-zero",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev:app": "vite dev",
		"dev:zero": "npx zero-cache-dev -p src/schema.ts",
		"dev": "concurrently \"npm run db:start\" \"npm run dev:zero\" \"npm run dev:app\" ",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"generate-zero-schema": "drizzle-zero generate --format -o src/schema.gen.ts",
		"db:seed": "tsx scripts/seed.ts",
		"update-packages": "npx npm-check-updates -u"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "7.0.0",
		"@sveltejs/kit": "2.48.2",
		"@sveltejs/vite-plugin-svelte": "6.2.1",
		"@types/node": "24.9.1",
		"@vitest/browser": "4.0.4",
		"@vitest/browser-playwright": "^4.0.4",
		"concurrently": "9.2.1",
		"dotenv": "17.2.3",
		"drizzle-kit": "0.31.6",
		"drizzle-orm": "0.44.7",
		"drizzle-zero": "0.15.1",
		"pg": "8.16.3",
		"playwright": "1.56.1",
		"prettier": "3.6.2",
		"prettier-plugin-svelte": "3.4.0",
		"svelte": "5.42.3",
		"svelte-check": "4.3.3",
		"tsx": "4.20.6",
		"typescript": "5.9.3",
		"vite": "7.1.12",
		"vite-plugin-devtools-json": "1.0.0",
		"vitest": "4.0.4",
		"vitest-browser-svelte": "2.0.1",
		"zero-svelte": "1.1.1"
	},
	"dependencies": {
		"@drop-in/graffiti": "1.0.0",
		"@rocicorp/zero": "0.24.2025101500",
		"better-auth": "1.3.33"
	}
}
